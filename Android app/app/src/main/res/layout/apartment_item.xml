<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/apartmentTitleTextView"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginRight="130dp"
            android:text="@string/apartment_title"
            android:textColor="#000"
            android:textSize="20sp"/>



        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text = "@string/apartment_address"
            android:textSize="15dp"
            android:layout_margin = "5dp"
            android:id="@+id/address">

        </TextView>

        <Button
            android:id="@+id/buttonAssing"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_margin = "5dp"
            android:layout_marginLeft="20dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="@string/btn_assign" />

    </LinearLayout>


    <TextView
        android:id="@+id/textViewWaiting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="10dp"
        android:text="@string/waiting"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/apartmentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="310dp"
        android:text="@string/apartment_date"
        android:layout_gravity="right"
        android:layout_marginTop="85dp"
        />


</RelativeLayout>